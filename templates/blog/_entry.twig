{% extends "_layouts/default" %}

{% block content %}
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        {# Featured Image #}
        {% set featuredImage = entry.blogFeaturedImage.one() %}
        {% if featuredImage %}
            <div class="mb-8 rounded-lg overflow-hidden shadow-soft">
                <img 
                    src="{{ featuredImage.url }}" 
                    alt="{{ featuredImage.title }}"
                    class="w-full aspect-video object-cover"
                >
            </div>
        {% endif %}

        {# Header #}
        <header class="mb-12">
            {# Meta Information #}
            <div class="flex items-center text-sm text-gray-500 mb-4">
                <time datetime="{{ entry.postDate|date('Y-m-d') }}">
                    {{ entry.postDate|date('d. F Y') }}
                </time>
                {% if entry.author %}
                    <span class="mx-2">•</span>
                    <span>{{ entry.author.fullName }}</span>
                {% endif %}
            </div>

            {# Title #}
            <h1 class="text-4xl sm:text-5xl font-bold text-brand-primary mb-6">
                {{ entry.title }}
            </h1>

            {# Summary #}
            {% if entry.blogSummary %}
                <p class="text-xl text-gray-600 leading-relaxed">
                    {{ entry.blogSummary }}
                </p>
            {% endif %}
        </header>

        {# Blog Content (CKEditor) #}
        {% if entry.blogContent %}
            <div class="prose prose-lg max-w-none">
                {{ entry.blogContent }}
            </div>
        {% endif %}

        {# Footer / Navigation #}
        <footer class="mt-16 pt-8 border-t border-gray-200">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-6">
                {# Previous Entry #}
                {% set prevEntry = craft.entries()
                    .section('blog')
                    .postDate('< ' ~ entry.postDate|date('Y-m-d H:i:s'))
                    .orderBy('postDate DESC')
                    .one() %}
                
                {% if prevEntry %}
                    <a href="{{ prevEntry.url }}" 
                       class="flex items-center text-brand-primary hover:text-brand-secondary transition-colors group">
                        <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                        <div class="text-left">
                            <div class="text-sm text-gray-500">Vorheriger Beitrag</div>
                            <div class="font-semibold">{{ prevEntry.title }}</div>
                        </div>
                    </a>
                {% else %}
                    <div></div>
                {% endif %}

                {# Back to Overview #}
                <a href="/blog" 
                   class="px-6 py-3 bg-brand-primary text-white rounded-lg hover:bg-brand-secondary transition-colors font-semibold">
                    Zur Übersicht
                </a>

                {# Next Entry #}
                {% set nextEntry = craft.entries()
                    .section('blog')
                    .postDate('> ' ~ entry.postDate|date('Y-m-d H:i:s'))
                    .orderBy('postDate ASC')
                    .one() %}
                
                {% if nextEntry %}
                    <a href="{{ nextEntry.url }}" 
                       class="flex items-center text-brand-primary hover:text-brand-secondary transition-colors group">
                        <div class="text-right">
                            <div class="text-sm text-gray-500">Nächster Beitrag</div>
                            <div class="font-semibold">{{ nextEntry.title }}</div>
                        </div>
                        <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                {% else %}
                    <div></div>
                {% endif %}
            </div>
        </footer>
    </article>

    {# Related Posts Section (Optional) #}
    {% set relatedPosts = craft.entries()
        .section('blog')
        .id('not ' ~ entry.id)
        .orderBy('RAND()')
        .limit(3)
        .all() %}

    {% if relatedPosts|length %}
        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 border-t border-gray-200">
            <h2 class="text-3xl font-bold text-brand-primary mb-8 text-center">Weitere Beiträge</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% for post in relatedPosts %}
                    <article class="bg-white rounded-lg overflow-hidden shadow-soft hover:shadow-elevated transition-shadow">
                        {# Thumbnail #}
                        {% set postImage = post.blogFeaturedImage.one() %}
                        <a href="{{ post.url }}" class="block aspect-video bg-brand-accent overflow-hidden">
                            {% if postImage %}
                                <img 
                                    src="{{ postImage.url }}" 
                                    alt="{{ postImage.title }}"
                                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                >
                            {% else %}
                                <div class="w-full h-full flex items-center justify-center text-brand-primary">
                                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            {% endif %}
                        </a>

                        <div class="p-6">
                            <div class="text-sm text-gray-500 mb-2">
                                {{ post.postDate|date('d.m.Y') }}
                            </div>
                            <h3 class="text-xl font-bold text-brand-primary mb-2">
                                <a href="{{ post.url }}" class="hover:text-brand-secondary transition-colors">
                                    {{ post.title }}
                                </a>
                            </h3>
                            {% if post.blogSummary %}
                                <p class="text-gray-600 text-sm line-clamp-2">
                                    {{ post.blogSummary }}
                                </p>
                            {% endif %}
                        </div>
                    </article>
                {% endfor %}
            </div>
        </section>
    {% endif %}
{% endblock %}
