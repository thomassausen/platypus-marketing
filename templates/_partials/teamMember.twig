{#
TeamMember Component

Parameters:
- title: string (required) - Name of team member
- image: Asset field (required)
- text: string (optional) - Description/Role
- email: string (optional)
- phoneNumber: string (optional)
#}

{% set image = image.one() ?? null %}

{% set imageWidth = 600 %}
{% set ratio = 1 %}
{% set imageHeightPx = (imageWidth / ratio)|round %}

{% set transform = {
    format: 'webp',
    quality: 85,
    width: imageWidth,
    height: imageHeightPx,
    mode: 'crop'
} %}

<div class="group">
    <div class="relative overflow-hidden rounded-2xl shadow-elevated transition-all duration-300 hover:shadow-2xl hover:scale-105">
        <div class="aspect-square w-full overflow-hidden bg-gradient-to-br from-brand-primary to-brand-secondary">
            {% if image %}
                {{ tag('img', {
                    class: 'w-full h-full object-cover',
                    width: imageWidth,
                    height: imageHeightPx,
                    src: image.getUrl(transform),
                    alt: title
                }) }}
            {% endif %}
        </div>
    </div>

    <div class="mt-6">
        <h3 class="text-2xl font-bold text-brand-primary mb-2">{{ title }}</h3>
        {% if text %}
            <p class="text-gray-600 mb-4">{{ text }}</p>
        {% endif %}

        <div class="space-y-2">
            {% if email %}
                <a href="mailto:{{ email }}" class="flex items-center text-gray-600 hover:text-brand-primary transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    {{ email }}
                </a>
            {% endif %}

            {% if phoneNumber %}
                <a href="tel:{{ phoneNumber }}" class="flex items-center text-gray-600 hover:text-brand-primary transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    {{ phoneNumber }}
                </a>
            {% endif %}
        </div>
    </div>
</div>
