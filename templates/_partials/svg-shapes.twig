{# SVG Background Shapes Partial #}
{% if variant != 'none' %}
    <div class="absolute inset-0 overflow-hidden">
        {% if variant == "1" %}
            <svg class="absolute top-0 left-0 w-[350px] h-[350px] {{ color1 }} -z-0" viewBox="0 0 350 350" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 0 175 Q 0 0, 175 0 Q 250 50, 250 175 Q 200 300, 0 175 Z" />
            </svg>
            <svg class="absolute bottom-0 right-0 w-[400px] h-[200px] {{ color2 }} -z-0" viewBox="0 0 400 200" xmlns="http://www.w3.org/2000/svg">
                <circle cx="300" cy="200" r="200" fill="currentColor" />
            </svg>
        {% elseif variant == "2" %}
            <svg class="absolute top-20 right-0 w-[300px] h-[300px] {{ color3 }} -z-0" viewBox="0 0 300 300" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="250" cy="150" rx="150" ry="100" fill="currentColor" />
            </svg>
            <svg class="absolute bottom-10 left-10 w-[350px] h-[350px] {{ color4 }} -z-0" viewBox="0 0 350 350" xmlns="http://www.w3.org/2000/svg">
                <circle cx="175" cy="175" r="175" fill="currentColor" />
            </svg>
        {% elseif variant == "3" %}
            <svg class="absolute top-32 left-1/4 w-[250px] h-[250px] {{ color1 }} -z-0" viewBox="0 0 250 250" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 125 0 Q 250 0, 250 125 Q 250 250, 125 250 Q 0 250, 0 125 Q 0 0, 125 0 Z" />
            </svg>
            <svg class="absolute bottom-20 right-1/4 w-[300px] h-[200px] {{ color3 }} -z-0" viewBox="0 0 300 200" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="150" cy="100" rx="150" ry="100" fill="currentColor" />
            </svg>
        {% elseif variant == "4" %}
            <svg class="absolute top-1/4 right-10 w-[200px] h-[200px] {{ color2 }} -z-0" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 100 0 L 200 100 L 100 200 L 0 100 Z" />
            </svg>
            <svg class="absolute bottom-0 left-0 w-[350px] h-[250px] {{ color4 }} -z-0" viewBox="0 0 350 250" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 0 125 Q 100 0, 200 125 Q 300 250, 0 250 Z" />
            </svg>
            <svg class="absolute top-10 left-1/3 w-[150px] h-[150px] {{ color1 }} -z-0" viewBox="0 0 150 150" xmlns="http://www.w3.org/2000/svg">
                <circle cx="75" cy="75" r="75" fill="currentColor" />
            </svg>
        {% elseif variant == "5" %}
            <svg class="absolute top-0 right-1/4 w-[280px] h-[280px] {{ color3 }} -z-0" viewBox="0 0 280 280" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="140" cy="140" rx="140" ry="90" fill="currentColor" transform="rotate(45 140 140)" />
            </svg>
            <svg class="absolute bottom-1/4 left-0 w-[300px] h-[300px] {{ color1 }} -z-0" viewBox="0 0 300 300" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 0 150 Q 50 0, 150 50 Q 250 100, 200 200 Q 100 250, 0 150 Z" />
            </svg>
        {% elseif variant == "6" %}
            <svg class="absolute top-0 left-0 w-[400px] h-[300px] {{ color2 }} -z-0" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="0" cy="0" rx="300" ry="200" fill="currentColor" />
            </svg>
            <svg class="absolute bottom-10 right-20 w-[250px] h-[250px] {{ color4 }} -z-0" viewBox="0 0 250 250" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 125 0 Q 200 50, 200 125 Q 150 200, 75 175 Q 0 150, 50 75 Q 100 0, 125 0 Z" />
            </svg>
            <svg class="absolute top-1/2 right-0 w-[180px] h-[180px] {{ color1 }} -z-0" viewBox="0 0 180 180" xmlns="http://www.w3.org/2000/svg">
                <circle cx="180" cy="90" r="90" fill="currentColor" />
            </svg>
        {% elseif variant == "7" %}
            <svg class="absolute top-1/3 left-10 w-[320px] h-[220px] {{ color3 }} -z-0" viewBox="0 0 320 220" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 0 110 Q 80 0, 160 50 Q 240 100, 320 110 Q 240 220, 160 170 Q 80 120, 0 110 Z" />
            </svg>
            <svg class="absolute bottom-0 right-1/3 w-[200px] h-[200px] {{ color2 }} -z-0" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <circle cx="100" cy="200" r="100" fill="currentColor" />
            </svg>
        {% elseif variant == "8" %}
            <svg class="absolute top-0 right-0 w-[350px] h-[350px] {{ color1 }} -z-0" viewBox="0 0 350 350" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 350 0 Q 350 175, 175 175 Q 0 175, 175 350 Q 350 350, 350 175 Z" />
            </svg>
            <svg class="absolute bottom-1/4 left-1/4 w-[220px] h-[220px] {{ color4 }} -z-0" viewBox="0 0 220 220" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="110" cy="110" rx="110" ry="70" fill="currentColor" />
            </svg>
            <svg class="absolute top-20 left-0 w-[180px] h-[180px] {{ color2 }} -z-0" viewBox="0 0 180 180" xmlns="http://www.w3.org/2000/svg">
                <circle cx="0" cy="90" r="90" fill="currentColor" />
            </svg>
        {% elseif variant == "9" %}
            <svg class="absolute top-1/4 right-1/4 w-[280px] h-[280px] {{ color3 }} -z-0" viewBox="0 0 280 280" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 140 0 Q 280 70, 280 140 Q 210 280, 140 280 Q 0 210, 0 140 Q 70 0, 140 0 Z" />
            </svg>
            <svg class="absolute bottom-0 left-0 w-[300px] h-[200px] {{ color1 }} -z-0" viewBox="0 0 300 200" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="0" cy="200" rx="200" ry="150" fill="currentColor" />
            </svg>
            <svg class="absolute top-0 left-1/3 w-[160px] h-[160px] {{ color2 }} -z-0" viewBox="0 0 160 160" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M 80 0 Q 120 40, 120 80 Q 80 120, 40 120 Q 0 80, 40 40 Q 80 0, 80 0 Z" />
            </svg>
        {% endif %}
    </div>
{% endif %}
